<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>
		<property name="connection.driver_class">${basedados.driver}</property>
		<property name="connection.provider_class">org.hibernate.connection.DriverManagerConnectionProvider</property>
		<property name="dialect">${basedados.dialeto}</property>
		<property name="show_sql">false</property>
	</session-factory>
</hibernate-configuration>